<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="match_parent"
	android:layout_height="match_parent">

	<ScrollView android:layout_width="fill_parent"
		android:layout_height="400dp">

		<LinearLayout android:layout_width="fill_parent"
			android:layout_height="wrap_content" android:orientation="vertical">

			<Button android:id="@+id/button1" android:layout_width="fill_parent"
				android:layout_height="wrap_content" android:text="Radio Buttons (Tut1)"
				android:textStyle="bold" android:textSize="25dp">
			</Button>

			<Button android:id="@+id/button2" android:layout_width="fill_parent"
				android:layout_height="wrap_content" android:text="List View (Tut2)"
				android:textStyle="bold" android:textSize="25dp">
			</Button>

			<Button android:id="@+id/button3" android:layout_width="fill_parent"
				android:layout_height="wrap_content" android:text="Set Wall (Tut3)"
				android:textStyle="bold" android:textSize="25dp">
			</Button>

			<Button android:id="@+id/button4" android:layout_width="fill_parent"
				android:layout_height="wrap_content" android:text="Tutorial 4"
				android:textStyle="bold" android:textSize="25dp">
			</Button>

			<Button android:id="@+id/button5" android:layout_width="wrap_content"
				android:layout_height="wrap_content" android:text="Graphics (Tut5)"
				android:textStyle="bold" android:textSize="25dp"
				android:background = "@drawable/custombutton"
				android:layout_gravity="center">
			</Button>

			<Button android:id="@+id/button6" android:layout_width="fill_parent"
				android:layout_height="wrap_content" android:text="Tutorial 6"
				android:textStyle="bold" android:textSize="25dp">
			</Button>

			<Button android:id="@+id/button7" android:layout_width="fill_parent"
				android:layout_height="wrap_content" android:text="Tutorial 7"
				android:textStyle="bold" android:textSize="25dp">
			</Button>

			<Button android:id="@+id/button8" android:layout_width="fill_parent"
				android:layout_height="wrap_content" android:text="Tutorial 8"
				android:textStyle="bold" android:textSize="25dp">
			</Button>

			<Button android:id="@+id/button9" android:layout_width="fill_parent"
				android:layout_height="wrap_content" android:text="Tutorial 9"
				android:textStyle="bold" android:textSize="25dp">
			</Button>
		</LinearLayout>

	</ScrollView>
</LinearLayout>
